{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "types": ["node", "jest", "@testing-library/jest-dom"],

    "paths": {
      "@data/*": ["client/src/data/*"],
      "@assets/*": ["client/src/assets/*"],
      "@redux/*": ["client/src/components/redux/*"],
      "@slices/*": ["client/src/components/redux/slices/*"],
      "@selectors/*": ["client/src/components/redux/selectors/*"],
      "@helpers/*": ["client/src/helpers/*"],
      "@routes/*": ["client/src/routes/*"],
      "@footers/*": ["client/src/components/footers/*"],
      "@modals/*": ["client/src/components/modals/*"],
      "@header/*": ["client/src/components/header/*"],
      "@destination/*": ["client/src/components/travels/destination/*"],
      "@custom-ui/*": ["client/src/components/custom-ui/*"]
    }
  },
  "include": ["client/src", "amadeus.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
